%% ##################### BIBLIOGRAPHY ########################################

\if@bibliography
    \if@tufte
        % tufte screws with bibs... [nobib] doesn't seem to work??
    \else
        \RequirePackage[
            backend=biber,
            style=authoryear-comp, % or icomp if ibid
            %style=authortitle-icomp, %chicago-like
            natbib=true,
            sortlocale=en_US,
            %giveninits=true,            % Use initials for first and middle names
            maxnames=3,
            minnames=1,
            maxcitenames=2,
            mincitenames=1,
            maxbibnames=5,
            minbibnames=1,
            doi=false,
            url=false,
            isbn=false,
            eprint=false,
            dashed=true,                % Will output dash instead of repeated author
            hyperref=true,
            backref=false,              % Backref can be useful
            useprefix=true,             % print "von" etc (biber only)
            sorting=nyt,                % sort bibliography after name-year-title
            sortcites=true,             % sort citations in text (when sep. by ",")
        ]{biblatex}                     % BIBLATEX Bibliography
        % Do not print language even when available
        \AtEveryBibitem{
            \clearlist{language}
        }
        % More on bibsettings here: http://tex.stackexchange.com/questions/12806/guidelines-for-customizing-biblatex-styles
    \fi
\fi

